{# templates/public/security/login.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="row">
    <div class="col-12">
        <h3>{{ title|capitalize~' user' }}</h3>
    </div>
    <div class="col-6">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form method="post" action="{{ path('login') }}" enctype="application/x-www-form-urlencoded">
            <p class="form-group">
                <label for="inputUsername">Username</label>
                <input type="text" value="" name="username" id="inputUsername" class="form-control" required autofocus>
            </p>
            <p class="form-group">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </p>
            <p class="form-group">
                <button class="btn btn-primary" type="submit">Login</button>
            </p>
            <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">
            {# See https://symfony.com/doc/current/security/remember_me.html #}
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        </form>
    </div>
</div>
{% endblock %}
