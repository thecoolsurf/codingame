{# templates/public/security/user.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <h3>{{ title }}</h3>
        </div>
        <div class="col-6">
            {{ form_start(form, {'method': 'post', 'action': path('profil')}) }}
{#            {{form_start(form)}}#}
            <div class="form-group">
                {{form_row(form.username)}}
            </div>
            <div class="form-group">
                {{form_row(form.lastname)}}
            </div>
            <div class="form-group">
                {{form_row(form.firstname)}}
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                {{form_row(form.email)}}
            </div>
            <div class="form-group">
                {{form_row(form.phone)}}
            </div>
            <div class="form-group">
                {{form_row(form.address)}}
            </div>
            <div class="form-group">
                {{form_row(form.zipcode)}}
            </div>
            <div class="form-group">
                {{form_row(form.city)}}
            </div>
            <div class="form-group">
                {{form_row(form.submit)}}
            </div>
            {{form_end(form)}}
        </div>
    </div>
{% endblock %}
