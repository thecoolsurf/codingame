{# templates/admin/listing/roles.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row" style="display: flow-root">
        <h3>{{ title }}</h3>
        <p><a href="{{ path('admin_roles_new') }}" class="btn btn-primary">Add role</a></p>
        <span style="float:right">{{ 'Total: '~rows|length }}</span>
    </div>
    <div class="row">
        <table class="table" width="100%">
            <tbody>
                <tr>
                    <th>Name</th>
                    <th>Label</th>
                    <th></th>
                    <th></th>
                </tr>
                {% for row in rows %}
                <tr id="{{ 'row'~row.id }}">
                    <td>{{ row.name }}</td>
                    <td>{{ row.label }}</td>
                    <td width="50">
                        <a href="{{ path('admin_roles_edit', { 'id':row.id }) }}" class="btn"><i class="fa fa-pencil"></i></a>
                    </td>
                    <td width="50">
                        <a href="{{ path('admin_roles_delete', { 'id':row.id }) }}" class="btn"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
