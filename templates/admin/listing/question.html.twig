{# templates/admin/listing/question.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <h3>{{ title }} <span style="font-size: 14px">{{ '(total: '~rows|length~')' }}</span></h3>
        </div>
        <div class="col">
            <a href="{{ path('admin_question_new') }}" class="btn btn-primary float-right">Add question</a>
        </div>
    </div>
    <div class="row">
        <table class="table" width="100%">
            <tbody>
                <tr>
                    <th>Category</th>
                    <th>Title</th>
                    <th>description</th>
                    <th>Edit</th>
                    <th>Delelte</th>
                </tr>
                {% for row in rows %}
                    <tr id="{{ 'row'~row.id }}">
                        <td>{{ row.categories.title }}</td>
                        <td>{{ row.title }}</td>
                        <td>{{ row.description }}</td>
                        <td width="50">
                            <a href="{{ path('admin_question_edit', { 'id':row.id }) }}" class="btn"><i class="fa fa-pencil"></i></a>
                        </td>
                        <td width="50">
                            <a href="{{ path('admin_question_delete', { 'id':row.id }) }}" class="btn"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
