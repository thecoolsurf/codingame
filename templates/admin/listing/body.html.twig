{# templates/admin/listing/body.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Admin - listing question{% endblock %}

{% block body %}
    <div class="row">
        <table class="table" width="100%">
            <tbody>
                <tr>
                    <th>Title</th>
                    <th>Slug</th>
                    <th>description</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                {% for row in rows %}
                    <tr id="{{ 'row'~row.id }}">
                        <td>{{ row.title }}</td>
                        <td>{{ row.slug }}</td>
                        <td>{{ row.description }}</td>
                        <td>
                            <a href="{{ path('admin_body_edit', { 'id':row.id }) }}" class="btn"><i class="fa fa-pencil"></i></a>
                        </td>
                        <td>
                            <a href="{{ path('admin_body_delete', { 'id':row.id }) }}" class="btn"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="row">
        <a href="{{ path('admin_body_new') }}" class="btn btn-primary">Add body</a>
    </div>
{% endblock %}
