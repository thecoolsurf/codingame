{# templates/admin/form/category.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Admin - edit category{% endblock %}

{% block body %}
    <div class="col-xs-12">
        {{form_start(form_edit)}}
        <p class="form-group">
            {{form_row(form_edit.title)}}
        </p>
        <p class="form-group">
            {{form_row(form_edit.slug)}}
        </p>
        <p class="form-group">
            {{form_row(form_edit.submit)}}
        </p>
        <p class="form-group">
            <a href="{{ path('admin_category_listing') }}">Back to listing</a>
        </p>
        {{form_end(form_edit)}}
    </div>
{% endblock %}
