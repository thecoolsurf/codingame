{# templates/admin/form/page.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row" style="display: flow-root">
        <h3>{{ title }}</h3>
        <p><a href="{{ path('admin_page_listing') }}">Back to listing</a></p>
    </div>
    <div class="row">
        {{form_start(form_edit)}}
        <p class="form-group">
            {{form_row(form_edit.h1)}}
        </p>
        <p class="form-group">
            {{form_row(form_edit.slug)}}
        </p>
        <p class="form-group">
            {{form_row(form_edit.submit)}}
        </p>
        {{form_end(form_edit)}}
    </div>
    <div class="row" style="display: flow-root">
        <p><a href="{{ path('admin_page_listing') }}">Back to listing</a></p>
    </div>
{% endblock %}
