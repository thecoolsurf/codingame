{# templates/admin/form/question.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Admin - edit question{% endblock %}

{% block body %}
    <div class="col-xs-12">
        {{form_start(form_edit)}}
        <p class="form-group">
            {{form_row(form_edit.categories)}}
        </p>
        <p class="form-group">
            {{form_row(form_edit.title)}}
        </p>
        <p class="form-group">
            {{form_row(form_edit.description)}}
        </p>
        <p class="form-group">
            {{form_row(form_edit.submit)}}
        </p>
        <p class="form-group">
            <a href="{{ path('admin_question_listing') }}">Back to listing</a>
        </p>
        {{form_end(form_edit)}}
    </div>
{% endblock %}
