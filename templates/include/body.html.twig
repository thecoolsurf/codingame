{% if 'admin' not in app.request.attributes.get('_route') %}
<div class="row">
    {% if app.request.attributes.get('_route') == 'home' %}
        <div class="col-3">
            <h1>{{ body.title }}</h1>
            <p>{{ body.description |nl2br }}</p>
        </div>
    {% else %}
        <div class="col-12">
            <h1>{{ body.title }}</h1>
            <p>{{ body.description |nl2br }}</p>
        </div>
    {% endif %}
</div>
{% endif %}